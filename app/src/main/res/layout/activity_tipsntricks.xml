<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tipsntricks">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="191dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="♡ Studying Tips and Tricks ♡"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="339dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="1-Focus on core concepts (grasp the main concept)                                                                                      2- Write down your notes by hand (you can make flashcards for key definitions or teach others to learn yourself)                                                                                      3-Set Time for studying (be strict)                                        --you can study as such:- read 2 times and understand -highlight things you should memorize in blue and things you dont need to but are important in green.                                                                                -Revise what you took on the same day.                                   -Understand what you read, not ignoring anything.                                                                                  -(in class) Don't write something down without understanding it.                                                                           -When you have an exam with a lot of information, summarize and write only the important things on paper."
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="Made With Love ♡" />

</LinearLayout>